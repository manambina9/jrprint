<script>
    // Validation du formulaire
document.querySelector('.php-email-form').addEventListener('submit', function(event) {
    event.preventDefault();
    var name = document.getElementById('name').value.trim();
    var email = document.getElementById('email').value.trim();
    var subject = document.getElementById('subject').value.trim();
    var message = document.getElementById('message').value.trim();
    var errorMessage = document.querySelector('.error-message');
    var sentMessage = document.querySelector('.sent-message');

    // Vérification des champs
    if (name === '' || email === '' || subject === '' || message === '') {
        errorMessage.innerHTML = 'Veuillez remplir tous les champs.';
        errorMessage.style.display = 'block';
        sentMessage.style.display = 'none';
    } else if (!validateEmail(email)) {
        errorMessage.innerHTML = 'Veuillez entrer une adresse email valide.';
        errorMessage.style.display = 'block';
        sentMessage.style.display = 'none';
    } else {
        errorMessage.style.display = 'none';
        sentMessage.style.display = 'block';
    }
});

// Fonction de validation d'email
function validateEmail(email) {
    var re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return re.test(email);
}

// Effet de clic du bouton
var submitButton = document.querySelector('.php-email-form button[type="submit"]');
submitButton.addEventListener('click', function() {
    submitButton.innerHTML = 'Envoi...';
    setTimeout(function() {
        submitButton.innerHTML = 'Envoyer un Message';
    }, 2000);
});

</script>

{% extends 'base.html.twig' %}

{% block title %}Demande de Devis{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
{% endfor %}
    <title>Demande de Devis</title>
    <link href="{{ asset('css/form.css') }}" rel="stylesheet">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg">
                    <div class="card-body p-4">
                        <h1 class="mb-4 text-center">Demande de Devis</h1>
                        <form method="post" action="" enctype="multipart/form-data">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="nom">Nom <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="nom" name="nom" placeholder="Votre nom" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="societe">Société (optionnel)</label>
                                    <input type="text" class="form-control" id="societe" name="societe" placeholder="Votre société">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="email">E-mail <span class="text-danger">*</span></label>
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Votre email" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="password">Mot de passe <span class="text-danger">*</span></label>
                                    <input type="password" class="form-control" id="password" name="password" placeholder="Votre mot de passe" required>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="password_confirmation">Confirmation du mot de passe <span class="text-danger">*</span></label>
                                    <input type="password" class="form-control" id="password_confirmation" name="password_confirmation" placeholder="Confirmez votre mot de passe" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="telephone">Téléphone (optionnel)</label>
                                    <input type="tel" class="form-control" id="telephone" name="telephone" placeholder="Votre téléphone">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="adresse">Adresse (optionnel)</label>
                                    <input type="text" class="form-control" id="adresse" name="adresse" placeholder="Votre adresse">
                                </div>
                                <div class="col-md-6">
                                    <label for="code_postal">Code postal (optionnel)</label>
                                    <input type="text" class="form-control" id="code_postal" name="code_postal" placeholder="Votre code postal">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="ville">Ville (optionnel)</label>
                                    <input type="text" class="form-control" id="ville" name="ville" placeholder="Votre ville">
                                </div>
                                <div class="col-md-6">
                                    <label for="prestation">Type de prestation <span class="text-danger">*</span></label>
                                    <select class="form-select" id="prestation" name="prestation" required>
                                        <option value="" disabled selected>Choisir une prestation</option>
                                        <option value="panneau">Panneau publicitaire</option>
                                        <option value="habillage">Habillage véhicule</option>
                                        <option value="bache">Bâche publicitaire</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="message">Message <span class="text-danger">*</span></label>
                                <textarea class="form-control" id="message" name="message" rows="5" placeholder="Détaillez votre projet ici..." required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="fichiers">Pièce(s) jointe(s) (optionnel)</label>
                                <input type="file" class="form-control" id="fichiers" name="fichiers[]" multiple>
                                <small class="form-text text-muted">Déposer un ou plusieurs fichiers ici ou cliquer pour télécharger (25Mo maximum)</small>
                            </div>
                            <div class="form-check mb-3">
                                <input type="checkbox" class="form-check-input" id="acceptation" required>
                                <label class="form-check-label" for="acceptation">
                                    En validant ce formulaire, j'accepte l'utilisation de mes données personnelles pour le traitement de ma demande.
                                </label>
                            </div>
                            <button type="submit" class="btn btn-danger w-100">Envoyer</button>
                        </form>
                    </div>
                </div>

                <div class="card shadow-lg mt-4">
                    <div class="card-body p-4 text-center">
                        <h2 class="mb-3">Découvrez nos prestations en détail</h2>
                        <p>Inscrivez-vous pour accéder à des informations supplémentaires sur nos prestations et tarifs exclusifs.</p>
                        <a href="{{ path('app_register') }}" class="btn btn-primary">S'inscrire</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
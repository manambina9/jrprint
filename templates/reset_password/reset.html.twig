{% extends 'base.html.twig' %}


{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}

<style>
/* assets/css/main.css */
.form-container {
    max-width: 500px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 8px;
}

.form-title {
    text-align: center;
    margin-bottom: 20px;
}

.form-group {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
}

.form-group label {
    width: 150px; /* Adjust as needed */
    margin-right: 10px; /* Small tabulation */
}

.form-group input {
    flex: 1;
}

.btn-primary {
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    border: none;
    border-radius: 5px;
    color: white;
    font-size: 16px;
}


</style>
    <div class="form-container">
        <h1 class="form-title">Réinitialiser votre mot de passe</h1>

        {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword.first, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_row(resetForm.plainPassword.second, {'label_attr': {'class': 'form-label'}}) }}
            <button class="btn btn-primary">Réinitialiser le mot de passe</button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}

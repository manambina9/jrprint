
{% block body %}
<head>
    <link href="{{ asset('css/Register.css') }}" rel="stylesheet">
 </head>
<div class="register-container">
    <h2 class="text-center">FORMULAIRE D'INSCRIPTION</h2>

    {{ form_start(registrationForm, {'method': 'POST', 'attr': {'class': 'registration-form', 'id': 'registrationForm'}}) }}

        <div class="form-group">
            <label for="case" class="form-label">Saisissez votre cas :</label>
            <select id="case" name="case" class="form-control">
                <option value="personnel">Personnel</option>
                <option value="entreprise">Entreprise</option>
            </select>
        </div>

        <div class="form-row">
            <div class="form-column">
                {{ form_row(registrationForm.email, {'attr': {'placeholder': 'Email'}}) }}
                {{ form_row(registrationForm.entreprise, {'label': 'Entreprise', 'attr': {'placeholder': 'Entreprise'}}) }}
                {{ form_row(registrationForm.adresse, {'label': 'Adresse', 'attr': {'placeholder': 'Adresse'}}) }}
                {{ form_row(registrationForm.plainPassword.first, {'label': 'Mot de Passe', 'attr': {'placeholder': 'Mot de Passe'}}) }}
                {{ form_row(registrationForm.plainPassword.second, {'label': 'Confirmation', 'attr': {'placeholder': 'Confirmation'}}) }}
            </div>

            <div class="form-column" id="enterpriseFields" style="display: none;">
                {{ form_row(registrationForm.nif, {'label': 'NIF', 'attr': {'placeholder': 'NIF'}}) }}
                {{ form_row(registrationForm.stat, {'label': 'STAT', 'attr': {'placeholder': 'STAT'}}) }}
                {{ form_row(registrationForm.cif, {'label': 'CIF', 'attr': {'placeholder': 'CIF'}}) }}
                {{ form_row(registrationForm.rcs, {'label': 'RCS', 'attr': {'placeholder': 'RCS'}}) }}
                {{ form_row(registrationForm.rc, {'label': 'RC', 'attr': {'placeholder': 'RC'}}) }}
            </div>
        </div>

        <div class="form-check-container">
            <div class="form-check">
                {{ form_row(registrationForm.agreeTerms, {'label': "J'accepte les conditions générales", 'attr': {'class': 'form-check-input'}}) }}
            </div>
        </div>

        <div class="form-footer">
            <button type="submit" class="btn btn-primary">S'inscrire</button>
            <a href="{{ path('app_login') }}" class="btn btn-secondary">Se connecter</a>
        </div>

    {{ form_end(registrationForm) }}
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const caseSelect = document.getElementById('case');
        const enterpriseFields = document.getElementById('enterpriseFields');

        caseSelect.addEventListener('change', function () {
            if (caseSelect.value === 'entreprise') {
                enterpriseFields.style.display = 'block';
            } else {
                enterpriseFields.style.display = 'none';
            }
        });
    });
</script>
{% endblock %}
